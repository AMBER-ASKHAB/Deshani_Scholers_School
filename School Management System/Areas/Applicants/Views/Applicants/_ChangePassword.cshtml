@using School_Management_System.Areas.Auth.Models
@model ResetPasswordViewModel

<style>
    /* SCOPE ONLY TO CHANGE PASSWORD PAGE */
    .change-password-page * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .change-password-page .login-container {
        background: #ffffff;
        padding: 40px;
        border-radius: 10px;
        width: 100%;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        text-align: center;
        height: 472px;
        max-width: 706px;
        margin: 92px auto; /* center horizontally */
    }

        .change-password-page .login-container h2 {
            background: #B22222;
            color: #ffffff;
            padding: 15px;
            border-radius: 8px 8px 0 0;
            margin: -40px -40px 30px -40px;
            font-size: 1.5rem;
        }

    .change-password-page form {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 284px;
        width: 100%;
        text-align: left;
        gap: 10px;
    }

    .change-password-page label {
        color: #B22222;
        font-weight: bold;
        font-size: 0.95rem;
    }

    .change-password-page input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 1rem;
        margin-top: 2px;
    }

    .change-password-page button {
        padding: 12px;
        border: 2px solid #B22222;
        background: white;
        color: #B22222;
        border-radius: 50px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

        .change-password-page button:hover {
            background: #B22222;
            color: white;
        }
</style>

<div class="change-password-page">
    <div class="login-container">
        <h2>Change Password</h2>

        <form asp-action="ChangePassword" asp-controller="Auth" method="post">
            <input type="hidden" asp-for="Token" />

            <label>Enter Old Password</label>
            <input asp-for="Old_Password" type="password" placeholder="Old Password" required />
            <span asp-validation-for="Old_Password" class="text-danger"></span>

            <label>Enter New Password</label>
            <input asp-for="Password" type="password" placeholder="New Password" required />
            <span asp-validation-for="Password" class="text-danger"></span>

            <label>Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">@TempData["Message"]</div>
            }
            <input type="hidden" asp-for="callingContext" value="ChangePassword" />
            <button type="submit">Change Password</button>
        </form>
    </div>
</div>
