@using School_Management_System.Areas.Auth.Models
@model ResetPasswordViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Change Password</title>
    <link rel="stylesheet" href="/css/forgetpass.css">
</head>
<style>
    /* RESET & BASE */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(to bottom, #fff4f4, #ffffff);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    /* CONTAINER */
    .login-container {
        background: #ffffff;
        padding: 40px;
        border-radius: 10px;
        width: 100%;
        max-width: 450px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        /* HEADER BAR */
        .login-container h2 {
            background: #B22222;
            color: #ffffff;
            padding: 15px;
            border-radius: 8px 8px 0 0;
            margin: -40px -40px 30px -40px;
            font-size: 1.5rem;
        }

    /* FORM */
    form {
        display: flex;
        flex-direction: column;
        justify-content: space-between; /* distributes space */
        height: 284px; /* NEW: Adjust this height as needed */
        width: 100%;
        box-sizing: border-box;
        text-align: left;
        gap: 10px;
    }

    /* LABELS */
    label {
        color: #B22222;
        font-weight: bold;
        font-size: 0.95rem;
    }

    /* INPUT FIELDS */
    input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 1rem;
        margin-top: -36px;
    }

    /* BUTTON */
    button {
        padding: 12px;
        border: 2px solid #B22222;
        background: white;
        color: #B22222;
        border-radius: 50px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

        button:hover {
            background: #B22222;
            color: white;
        }

</style>
<body>
    <div class="login-container" style="height: 569px;max-width: 706px;">
        <h2>Change Password</h2>

        <form id="forgetPasswordForm" asp-action="ChangePassword" method="Post">
            <input type="hidden" asp-for="Token" />

            <label for="new-password">Enter New Password</label>
            <input asp-for="Password" type="password" style="margin-top: 3px;" id="new-password" placeholder="New Password" required />
            <span asp-validation-for="Password" id="password" class="text-danger"></span>

            <label for="confirm-password">Confirm Password</label>
            <input asp-for="ConfirmPassword" style="margin-top: 3px;" type="password" id="confirm-password" placeholder="Confirm Password" required />
            <span asp-validation-for="ConfirmPassword" id="Confirmpassword" class="text-danger"></span>
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">@TempData["Message"]</div>
            }
            <input type="hidden" asp-for="callingContext" value="forgotPassword" />

            <button type="submit">Change Password</button>
        </form>
        <form asp-controller="Auth" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>

    </div>

    <script src="forget-password-script.js"></script>
</body>
</html>
